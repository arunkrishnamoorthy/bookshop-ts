{
  "name": "bookshop-ts",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^7",
    "express": "^4",
    "@sap/xssec": "^3",
    "passport": "^0"
  },
  "devDependencies": {
    "@cap-js/cds-typer": "^0",
    "@cap-js/sqlite": "^1.3.1",
    "cds-plugin-ui5": "^0.6.13"
  },
  "scripts": {
    "approuter": "cds bind --exec -- npm start --prefix approuter",
    "hybrid": "cds-ts watch --profile hybrid"
  },
  "cds": {
    "requires": {
      "db": "sql",
      "[development]": {
        "auth": {
          "kind": "basic",
          "users": {
            "user": {
              "password": "123",
              "roles": [
                "user"
              ]
            },
            "admin": {
              "password": "123",
              "roles": [
                "admin"
              ]
            }
          }
        }
      },
      "[hybrid]": {
        "auth": "xsuaa"
      }
    }
  },
  "workspaces": [
    "approuter",
    "app/*"
  ],
  "sapux": [
    "app/display-books"
  ]
}
